{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": [
			"packages/graphinx/src/config.ts",
			"packages/graphinx/src/schema.ts"
		]
	},
	"vcs": {
		"enabled": true,
		"useIgnoreFile": true,
		"clientKind": "git"
	},
	"files": {
		"ignore": [
			"docs/",
			".svelte-kit/",
			"lib/schema.ts",
			"packages/graphinx/dist/",
			"packages/example/.build/src/lib/data.generated.ts"
		]
	},
	"overrides": [
		{
			"include": ["*.svelte"],
			"linter": {
				"rules": {
					"correctness": {
						"noUnusedLabels": "off"
					},
					"style": {
						"useConst": "off"
					},
					"suspicious": {
						"noConfusingLabels": "off"
					},
					"complexity": {
						"noUselessLoneBlockStatements": "off"
					}
				}
			}
		}
	]
}
