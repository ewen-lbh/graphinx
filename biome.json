{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": ["packages/narasimha/src/config.ts", "packages/narasimha/src/schema.ts"]
	},
	"vcs": {
		"enabled": true,
		"useIgnoreFile": true,
		"clientKind": "git"
	},
	"files": {
		"ignore": ["docs/", ".svelte-kit/", "lib/schema.ts", "packages/narasimha/dist/"]
	},
	"overrides": [
		{
			"include": ["*.svelte"],
			"linter": {
				"rules": {
					"correctness": {
						"noUnusedLabels": "off"
					},
					"style": {
						"useConst": "off"
					},
					"suspicious": {
						"noConfusingLabels": "off"
					},
					"complexity": {
						"noUselessLoneBlockStatements": "off"
					}
				}
			}
		}
	]
}
